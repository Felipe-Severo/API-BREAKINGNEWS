{
    "openapi": "3.0.0",
    "info": {
        "title": "API de Notícias",
        "description": "Documentação da API de Notícias",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000"
        }
    ],
    "paths": {
        "/user/": {
            "post": {
                "summary": "Cria um novo usuário",
                "tags": ["Usuários"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            }
                        }
                    }
                },
                "responses": {
                    "201": { "description": "Usuário criado com sucesso" },
                    "400": { "description": "Erro na requisição" }
                }
            }
        },
        "/user": {
            "get": {
                "summary": "Recupera uma lista de usuários",
                "tags": ["Usuários"],
                "responses": {
                    "200": { "description": "Lista de usuários retornada com sucesso" }
                }
            }
        },
        "/user/{id}": {
            "get": {
                "summary": "Recupera um usuário por ID",
                "tags": ["Usuários"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": { "description": "Usuário encontrado" },
                    "404": { "description": "Usuário não encontrado" }
                }
            },
            "patch": {
                "summary": "Atualiza um usuário por ID",
                "tags": ["Usuários"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": { "description": "Usuário atualizado com sucesso" },
                    "400": { "description": "Erro na atualização" }
                }
            }
        },
        "/news/": {
            "post": {
                "summary": "Cria uma nova notícia",
                "tags": ["Notícias"],
                "security": [{ "bearerAuth": [] }],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/News"
                            }
                        }
                    }
                },
                "responses": {
                    "201": { "description": "Notícia criada com sucesso" },
                    "401": { "description": "Não autorizado" }
                }
            },
            "get": {
                "summary": "Recupera uma lista de notícias",
                "tags": ["Notícias"],
                "responses": {
                    "200": { "description": "Lista de notícias retornada com sucesso" }
                }
            }
        },
        "/news/top": {
            "get": {
                "summary": "Recupera a notícia mais curtida",
                "tags": ["Notícias"],
                "responses": {
                    "200": { "description": "Notícia mais curtida retornada com sucesso" }
                }
            }
        },
        "/news/search": {
            "get": {
                "summary": "Busca notícias pelo título",
                "tags": ["Notícias"],
                "parameters": [
                    {
                        "name": "title",
                        "in": "query",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": { "description": "Notícias encontradas" }
                }
            }
        },
        "/news/byUser": {
            "get": {
                "summary": "Recupera todas as notícias do usuário autenticado",
                "tags": ["Notícias"],
                "security": [{ "bearerAuth": [] }],
                "responses": {
                    "200": { "description": "Lista de notícias do usuário" },
                    "401": { "description": "Não autorizado" }
                }
            }
        },
        "/news/{id}": {
            "get": {
                "summary": "Recupera uma notícia por ID",
                "tags": ["Notícias"],
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": { "description": "Notícia encontrada" },
                    "404": { "description": "Notícia não encontrada" }
                }
            },
            "patch": {
                "summary": "Atualiza uma notícia por ID",
                "tags": ["Notícias"],
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": { "description": "Notícia atualizada com sucesso" }
                }
            },
            "delete": {
                "summary": "Deleta uma notícia por ID",
                "tags": ["Notícias"],
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": { "description": "Notícia deletada com sucesso" }
                }
            }
        },
        "/news/like/{id}": {
            "patch": {
                "summary": "Adiciona um like a uma notícia",
                "tags": ["Notícias"],
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": { "description": "Like adicionado" }
                }
            }
        },
        "/news/comment/{id}": {
            "patch": {
                "summary": "Adiciona um comentário a uma notícia",
                "tags": ["Comentários"],
                "security": [{ "bearerAuth": [] }],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Comment"
                            }
                        }
                    }
                },
                "responses": {
                    "200": { "description": "Comentário adicionado" }
                }
            }
        },
        "/news/comment/{idNews}/{idComment}": {
            "patch": {
                "summary": "Deleta um comentário por ID",
                "tags": ["Comentários"],
                "security": [{ "bearerAuth": [] }],
                "responses": {
                    "200": { "description": "Comentário deletado com sucesso" }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "email": { "type": "string" },
                    "password": { "type": "string" }
                }
            },
            "News": {
                "type": "object",
                "properties": {
                    "title": { "type": "string" },
                    "content": { "type": "string" }
                }
            },
            "Comment": {
                "type": "object",
                "properties": {
                    "content": { "type": "string" }
                }
            }
        }
    }
}
